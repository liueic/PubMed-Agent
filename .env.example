# LLM configuration
LLM_API_KEY=your_llm_api_key
LLM_MODEL=gpt-4o
LLM_BASE_URL=
TEMPERATURE=0.7
TOP_P=0.95

# Embedding configuration
EMBEDDING_API_KEY=
EMBEDDING_BASE_URL=
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Vector database
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma
FAISS_INDEX_PATH=./data/faiss.index

# PubMed credentials and backend
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=your_pubmed_api_key
PUBMED_TOOL_NAME=pubmed_agent
PUBMED_BACKEND=python_mcp
PUBMED_MCP_BASE_DIR=./cache
ABSTRACT_MODE=quick
FULLTEXT_MODE=disabled
ENDNOTE_EXPORT=enabled

# Proxy configuration
PROXY_ENABLED=disabled
HTTP_PROXY=
HTTPS_PROXY=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_TIMEOUT=30
PROXY_RETRY_COUNT=3

# Agent role configuration (optional)
# If not set, will automatically try to load "Synapse Scholar" from agents/ directory if it exists
# You can specify either role name or role file path:
AGENT_ROLE_NAME=Synapse_Scholar
AGENT_ROLE_FILE=agents/Synapse_Scholar.md
